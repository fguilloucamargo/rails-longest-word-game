<div class="container">
  <h1>New game</h1>

  <div class="card">
    <% @letters.each do |letter| %>
     <div class="square-blue"> <%= letter %></div>
    <% end %>
  </div>

  <form method="post" action="score" class="form-control">
    <label for="fname">What is the longest world you can find?</label><br>
    <input type="text" name="word">
    <input type="submit">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%=  hidden_field_tag 'letters', @letters%>
  </form>

</div>
